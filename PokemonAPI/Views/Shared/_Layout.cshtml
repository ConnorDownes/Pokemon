<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="PageContainer">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">
                <img src='@Url.Content("~/Images/PokemonLogo.png")' height="40" style="padding: 5px 20px 0px 10px;" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        @Html.ActionLink("Search", "Search", "Pokemon", null, new { @class = "nav-link" })
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>

        <div id="bodyContainer">
            @RenderBody()
        </div>
        <div id="footerPlaceholder"></div>
    </div>

    <footer id="footerContainer">
        <span style="font-weight: 700;">Created and Designed by Connor Downes</span><br />
        Data provided by PokeAPI
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript">
        function dynamicBodyHeight() {
            let body = document.getElementById("bodyContainer");
            let footerHeight = $("#footerContainer").outerHeight(true);
            let bannerHeight = $("#BannerContainer").outerHeight(true);
            body.style.minHeight = window.innerHeight - (bannerHeight + footerHeight) + "px";
        }

        

        @RenderSection("scripts", required: false)
    </script>
</body>
</html>
