<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div id="PageContainer">
        <div id="SideMenuContainer">
            <div class="SideMenuTopBlock">
                <h3>MENU</h3>
            </div>
            <div class="SideMenuBlock">
                Home
            </div>
            <div class="SideMenuBlock">
                Pokemon
            </div>
            <div class="SideMenuBlock">
                Team Builder
            </div>
        </div>
        <div id="MainContainer">
            <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top" style="z-index: 1;">
                <a class="navbar-brand" href="/">
                    <img src='@Url.Content("~/Images/PokemonLogo.png")' height="40" style="padding: 5px 20px 0px 10px;" />
                </a>
                <button class="animated-nav-button" type="button" aria-label="Toggle navigation">
                    <div class="animated-nav-icon"><span></span><span></span><span></span></div>
                </button>
            </nav>

            <div id="navigationMenuOverlay">
                <div id="bodyContainer">
                    @RenderBody()
                    <div id="footerPlaceholder"></div>
                </div>
                
                <footer id="footerContainer">
                    <span style="font-weight: 700;">Created and Designed by Connor Downes</span><br />
                    Data provided by PokeAPI
                </footer>
            </div>
        </div>
    </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript">
        function dynamicBodyHeight() {
            let body = document.getElementById("bodyContainer");
            let footerHeight = $("#footerContainer").outerHeight(true);
            let bannerHeight = $("#BannerContainer").outerHeight(true);
            body.style.minHeight = window.innerHeight - (bannerHeight + footerHeight) + "px";
        }

        $(document).ready(function () {
            $('.animated-nav-button').on('click', function () {
                $('#SideMenuContainer').toggleClass('open');
                $('.animated-nav-icon').toggleClass('open');
                $('#navigationMenuOverlay').toggleClass('open');
            });
        });

        @RenderSection("scripts", required: false)
    </script>
</body>
</html>
